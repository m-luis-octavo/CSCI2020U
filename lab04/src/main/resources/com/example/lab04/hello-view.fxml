<!-- GridPane initialization -->
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.PasswordField?>
<GridPane fx:controller="com.example.lab04.HelloController" xmlns:fx="https://javafx.com/fxml"
          alignment="center" hgap="10" vgap="10">

    <!-- Text Labels -->
    <Label text = "Username" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
    <Label text = "Password" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
    <Label text = "Full Name" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
    <Label text = "E-Mail" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
    <Label text = "Phone #" GridPane.columnIndex="0" GridPane.rowIndex="5"/>
    <Label text = "Date of Birth" GridPane.columnIndex="0" GridPane.rowIndex="6"/>

    <!-- Response Labels -->
    <TextField fx:id="UsernameTextField" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
    <PasswordField fx:id="PasswordTextField" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
    <TextField fx:id="FullNameTextField" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
    <TextField fx:id="EmailTextField" GridPane.columnIndex="1" GridPane.rowIndex="4"/>
    <TextField fx:id="PhoneTextField" GridPane.columnIndex="1" GridPane.rowIndex="5"/>
    <DatePicker fx:id="DateField" GridPane.columnIndex="1" GridPane.rowIndex="6"/>

    <!-- Button Submit -->
    <Button fx:id="SubmitButton" text="Submit" GridPane.columnIndex="1" GridPane.rowIndex="7" onAction="#LabSubmitButton"/>


</GridPane>